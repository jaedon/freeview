import logcommon;

mdx = {   "#mandatory" : [ "type", "sev", "esn", "xid" ],
          "#extensible" : true,
          "type" : "enum(mdx)",
          "sev" : sev,
          "esn" : esn,
          "xid" : xid,
          "url" : "string",
          "iname" : "string",
