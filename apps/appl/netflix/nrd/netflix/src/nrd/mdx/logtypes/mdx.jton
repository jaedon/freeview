mdxdeviceobj = { "#mandatory" : ["url", "uuid", "paired", "fname", "sid", "targetuserid", "controlleruserid", "sent", "recvd" ],
                 "#extensible" : false,
                 "url" : "string",
                 "uuid" : "string",
                 "paired" : "boolean",
                 "fname" : "string",
                 "sid" : "integer",
                 "targetuserid" : "string",
                 "controlleruserid" : "string",
