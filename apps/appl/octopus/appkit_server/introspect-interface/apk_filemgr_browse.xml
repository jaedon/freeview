<?xml version="1.0" ?>
<!-- ref. http://dbus.freedesktop.org/doc/dbus-specification.html -->
<node name="/Octopus/Appkit/Filemgr/Browse">   
    <interface name="Octopus.Appkit.Filemgr.Browse">

    <method name="Open">
    	<arg type="s" name="path" direction="in" />
    	<arg type="u" name="category" direction="in" />
    	<arg type="s" name="extFilter" direction="in" />
    	<arg type="u" name="optFlags" direction="in" />
    	<arg type="u" name="handle" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
  
    <method name="Close">
    	<arg type="u" name="handle" direction="in" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>                                                                        

    <method name="GetItems">
    	<arg type="u" name="handle" direction="in" />
    	<arg type="u" name="index" direction="in" />
    	<arg type="u" name="reqCount" direction="in" />
    	<arg type="i" name="option" direction="in" />    	   	    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>   

    <method name="ScanItems">
    	<arg type="u" name="handle" direction="in" />
    	<arg type="u" name="reqCount" direction="in" />
    	<arg type="i" name="option" direction="in" />    	   	    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>  

    <method name="Sort">
    	<arg type="u" name="handle" direction="in" />
    	<arg type="u" name="sort" direction="in" />    	   	    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>  
            
    <signal name="event">
      <arg type="u" name="handleId" direction="in"/>
      <arg type="u" name="event" direction="in"/>
      <arg type="i" name="result" direction="in"/>
    </signal>


  </interface>
</node>
