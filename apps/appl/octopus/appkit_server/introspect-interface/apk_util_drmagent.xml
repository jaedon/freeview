<?xml version="1.0" ?>
<!-- ref. http://dbus.freedesktop.org/doc/dbus-specification.html -->
<node name="/Octopus/Appkit/Util/Drmagent">   
    <interface name="Octopus.Appkit.Util.Drmagent">

    <method name="SendDrmMessage">
    	<arg type="s" name="msgType" direction="in" />
    	<arg type="s" name="message" direction="in" />
    	<arg type="s" name="drmSystemId" direction="in" />    	
			<arg type="u" name="msgId" direction="in" />    	
			<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
  
    <method name="SendDrmSystemStatusRequest">
    	<arg type="s" name="drmSystemId" direction="in" />    	
			<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>                                                                        

    <signal name="event">
      <arg type="s" name="msgStr" direction="in"/>
      <arg type="u" name="msgInt" direction="in"/>
      <arg type="u" name="resultCode" direction="in"/>
    </signal>

    <signal name="status_event">
      <arg type="s" name="drmSystenId" direction="in"/>
    </signal>
    
  </interface>
</node>
