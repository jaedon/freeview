<?xml version="1.0" ?>
<!-- ref. http://dbus.freedesktop.org/doc/dbus-specification.html -->
<node name="/Octopus/Appkit/Util/Power">   
    <interface name="Octopus.Appkit.Util.Power">

    <method name="GetWakeupReason">    	
    	<arg type="u" name="wakeupReason" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
  
    <method name="GetWakeupSecondReason">    	
    	<arg type="u" name="wakeupSecondReason" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>                                                                        

    <method name="SetStandbyPowerMode">    	
    	<arg type="u" name="powerMode" direction="in" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
    
    <method name="GetStandbyPowerMode">    	
    	<arg type="u" name="powerMode" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
    
    <method name="IsStandbyMode">    	
    	<arg type="b" name="reval" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>
    
    <method name="GoingToReboot">    	
    	<arg type="b" name="reval" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>    
    
    <method name="GoingToShutdown">    	
    	<arg type="b" name="reval" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>      

    <method name="GoingToOperate">    	
    	<arg type="b" name="reval" direction="out" />
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>          
    
    <method name="RequestShutDown">    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>   
    
    <method name="RequestReboot">    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>   

    <method name="RequestOperation">    	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>   

    <method name="WaitShutDown">   
    	<arg type="u" name="waitTime" direction="in" /> 	
      	<annotation name="org.freedesktop.DBus.Method.NoReply" value="error"/>
    </method>   

    <signal name="event">
      <arg type="u" name="param1" direction="in"/>
      <arg type="u" name="param2" direction="in"/>
      <arg type="u" name="param3" direction="in"/>
    </signal>


  </interface>
</node>
