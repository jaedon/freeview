  ifeq "$(TARGETOS)" "vxWorks"
    DSGCC_OBJS += VxRemoteTerminalConsoleThread.o
  endif
endif

ifeq ($(BCM_CONSOLE_SUPPORT),1)
  DSGCC_OBJS +=  CallTraceCommandTable.o \
        MsgLogSettingsCommandTable.o  
		

   ifeq ($(BCM_NONVOL_SUPPORT),1)  
