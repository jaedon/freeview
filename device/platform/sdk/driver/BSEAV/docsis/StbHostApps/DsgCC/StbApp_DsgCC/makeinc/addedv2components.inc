					 CmAppNonVolCommandTable.o \
					 NonVolSettingsCommandTable.o
	endif
          
  ifeq ($(BCM_BASICHALIF_SUPPORT),1)
    DSGCC_OBJS += HalIfNonVolSettingsCommandTable.o \
        SnoopCommandTable.o
  endif
                     
  ifeq ($(ENET_HAL_INCLUDED),1)
    DSGCC_OBJS     += EnetHalCommandTable.o    
  endif
  
  ifeq ($(WIFI80211_HAL_INCLUDED),1)
    DSGCC_OBJS     += WiFi80211CommandTable.o    
  endif
  
  ifeq ($(USB_HAL_INCLUDED),1)
    DSGCC_OBJS     += UsbHalCommandTable.o     
  endif
  
  ifeq ($(HPNA_HAL_INCLUDED),1)
    DSGCC_OBJS     += HpnaHalCommandTable.o     
  endif
  
  ifeq ($(BCM_IPHALIF_SUPPORT),1)
    DSGCC_OBJS     += IpHalCommandTable.o     
  endif
  
  ifeq ($(BCM_FORWARDER_SUPPORT),1)
    DSGCC_OBJS     += ForwarderCommandTable.o     
  endif
  
  ifeq ($(BCM_TELNET_SUPPORT),1)
