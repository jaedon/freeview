##############################
# PLAYREADY DEFINES
##############################
BMEDIA_DEFINES += B_HAS_DRM=1
BMEDIA_DEFINES += NEXUS_DRM_BUILD=1
BMEDIA_DEFINES += DRM_BUILD_PROFILE=10
BMEDIA_DEFINES += DRM_SUPPORT_LOCKING=0
BMEDIA_DEFINES += DRM_SUPPORT_MULTI_THREADING=0
BMEDIA_DEFINES += DRM_SUPPORT_DATASTORE_PREALLOC=1
BMEDIA_DEFINES += DRM_SUPPORT_NATIVE_64BIT_TYPES=1
BMEDIA_DEFINES += DRM_SUPPORT_FORCE_ALIGN=0
BMEDIA_DEFINES += DRM_SUPPORT_ASSEMBLY=1
BMEDIA_DEFINES += DRM_SUPPORT_PRECOMPUTE_GTABLE=0
BMEDIA_DEFINES += DRM_SUPPORT_TRACING=0
BMEDIA_DEFINES += DRM_SUPPORT_PRIVATE_KEY_CACHE=0
BMEDIA_DEFINES += DRM_SUPPORT_EMBEDDED_CERTS=0
BMEDIA_DEFINES += DRM_SUPPORT_DEVICE_SIGNING_KEY=0
BMEDIA_DEFINES += DRM_SUPPORT_NONVAULTSIGNING=1
BMEDIA_DEFINES += DRM_USE_IOCTL_HAL_GET_DEVICE_INFO=0
BMEDIA_DEFINES += _DATASTORE_WRITE_THRU=1
BMEDIA_DEFINES += _ADDLICENSE_WRITE_THRU=0
BMEDIA_DEFINES += DRM_HDS_COPY_BUFFER_SIZE=32768
BMEDIA_DEFINES += DRM_TEST_SUPPORT_NET_IO=0
BMEDIA_DEFINES += USE_PK_NAMESPACES=0
BMEDIA_DEFINES += DRM_INCLUDE_PK_NAMESPACE_USING_STATEMENT=0
BMEDIA_DEFINES += DRM_KEYFILE_VERSION=3
BMEDIA_DEFINES += DBG=1
BMEDIA_DEFINES += _CRT_SECURE_NO_DEPRECATE
BMEDIA_DEFINES += _CRT_OBSOLETE_NO_DEPRECATE
BMEDIA_DEFINES += _CRT_SECURE_FORCE_DEPRECATE
BMEDIA_DEFINES += _X86_
BMEDIA_DEFINES += TARGET_LITTLE_ENDIAN=1
ifeq ($(PRDY_ROBUSTNESS_ENABLE),y)
BMEDIA_DEFINES += PRDY_ROBUSTNESS=1
endif

##############################
# PLAYREADY PATH
##############################
ifeq ($(PRDY_ROBUSTNESS_ENABLE),y)
MSDRM_PRDY_BIN_DIR := $(BSEAV)/lib/playready20/output/lib/playready_robust
else
MSDRM_PRDY_BIN_DIR := $(BSEAV)/lib/playready20/output/lib/playready
endif
MSDRM_PRDY_SRC_DIR := $(BSEAV)/lib/playready20/source

##############################
# PLAYREADY INC
##############################
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/inc
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/results
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/certs
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/xmr
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/ndtinc
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/keyfile
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/keyfileformat
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/oem/ansi/inc
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/oem/ansi/trace
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/tools/common
BMEDIA_INCLUDES += $(MSDRM_PRDY_SRC_DIR)/oem/common/inc
ifeq ($(PRDY_ROBUSTNESS_ENABLE),y)
BMEDIA_INCLUDES += $(BSEAV)/lib/drmrootfs
endif

MAGNUM_PRECOMPILED_OBJECTS += $(wildcard $(MSDRM_PRDY_BIN_DIR)/libdrm*.a)
ifeq ($(PRDY_ROBUSTNESS_ENABLE),y)
MAGNUM_PRECOMPILED_OBJECTS += $(BSEAV)/lib/drmrootfs/libdrmrootfs.a
endif
