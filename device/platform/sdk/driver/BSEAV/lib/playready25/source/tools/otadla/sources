    $(_DRM_BLACKBOX_LIBS)                           \
    $(_DRM_TOOLS_COMMON_LIBS)                       \

!if "$(_DRM_BUILD_TOOL)" == "NTBUILD"
TARGETLIBS = $(TARGETLIBS)                          \
    $(SDK_LIB_PATH)\wininet.lib                     \
!endif
