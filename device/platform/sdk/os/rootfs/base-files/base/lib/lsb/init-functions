log_success_msg () {
    echo " * $@"
}

log_failure_msg () {
    echo " * $@"
}

log_warning_msg () {
    echo " * $@"
}

# int log_begin_message (char *message)
log_begin_msg () {
	[ -z "$1" ] && return 1
	echo " * $*"
}

# int log_end_message (int exitstatus)
log_end_msg () {
	[ -z "$1" ] && return 1

	if [ $1 -eq 0 ]; then
		echo "   ...done."
	else
		echo "   ...fail!"
	fi
	return $1
}
